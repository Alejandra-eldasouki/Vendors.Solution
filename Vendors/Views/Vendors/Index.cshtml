@using Vendors.Models;
<h1>Current Vendors</h1>

 @if (@Model.Count == 0)
{
  <h4>Please add a new Vendor</h4>
} 

<ul>
  @foreach (Vendor vend in Model)
  {
    <li><h4><a href="/vendor/@vend.Id">@vend.Name</a></h4></li>
    <ul><h5>@vend.VendorDescription</h5></ul>
    

  }
</ul>
  <p><a href='/'>Click here to go back</a></p>
  <p><a href='/Vendors/new'>or here to add a vendor</a></p>
